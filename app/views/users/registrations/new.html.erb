<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum required please)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  
  <div class="field">
    <%= f.label "date Of Birth" %>
    <%= f.date_select :dob , start_year: 1950 %>
    </div>
    
    <div class="field">
    <%= f.label "Contact Number" %>
    <%= f.text_field :pnumber %>
    </div>
    
      <div class="field">
    <%= f.label "Address" %>
    <%= f.text_field :address %>
    </div>
 
    
  <div class="actions">
    <!--%= WelcomeMail.welcome_email(:email).deliver_now %!-->
    <!--%= f.role = "patient" %>
    <!--%= f.pnumber=:Phonenumber%-->
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
